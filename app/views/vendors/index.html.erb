<h1>Listing vendors</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Website</th>
      <th>No of employees</th>
      <th>Year of founding</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Display name</th>
      <th>Phone</th>
      <th>Logo</th>
      <th>Git link</th>
      <th>Works</th>
      <th>Services</th>
      <th>Testimonials</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.company %></td>
        <td><%= vendor.website %></td>
        <td><%= vendor.no_of_employees %></td>
        <td><%= vendor.year_of_founding %></td>
        <td><%= vendor.first_name %></td>
        <td><%= vendor.last_name %></td>
        <td><%= vendor.display_name %></td>
        <td><%= vendor.phone %></td>
        <td><%= vendor.logo %></td>
        <td><%= vendor.git_link %></td>
        <td><%= vendor.works.inspect %></td>
        <td><%= vendor.services.inspect %></td>
        <td><%= vendor.testimonials.inspect %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vendor', new_vendor_path %>
